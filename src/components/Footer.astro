---
// 导入配置文件
import { profileConfig } from "../config";
// 导入URL工具
import { url } from "../utils/url-utils";

// 获取当前年份
const currentYear = new Date().getFullYear();
---

<!-- 使用语义化的footer标签 -->
<footer class="footer-container">
  <!-- 分隔线 - 响应式设计 -->
  <div class="divider"></div>
  
  <!-- 页脚内容区域 -->
  <div class="footer-content">
    <!-- 版权信息 -->
    <p class="copyright">
      &copy; <span id="copyright-year">{currentYear}</span> {profileConfig.name}. All Rights Reserved.
    </p>
    
    <!-- 导航链接 -->
    <div class="footer-links">
      <a class="footer-link" target="_blank" href={url('rss.xml')} aria-label="RSS订阅">
        RSS
      </a>
      <span class="link-separator">/</span>
      <a class="footer-link" target="_blank" href={url('sitemap-index.xml')} aria-label="站点地图">
        Sitemap
      </a>
    </div>
    
    <!-- 技术支持信息 -->
    <p class="powered-by">
      Powered by
      <a class="footer-link" target="_blank" href="https://astro.build" aria-label="Astro官网">
        Astro
      </a>
      &amp;
      <a class="footer-link" target="_blank" href="https://github.com/saicaca/fuwari" aria-label="Fuwari GitHub仓库">
        Fuwari
      </a>
    </p>
  </div>
</footer>

<style>
  /* 页脚容器 */
  .footer-container {
    margin-top: 3rem;
    padding: 0 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  /* 分隔线 */
  .divider {
    border-top: 1px dashed;
    border-color: rgba(0, 0, 0, 0.1);
    width: 80%;
    margin: 2.5rem auto;
    
    /* 深色模式适配 */
    @media (prefers-color-scheme: dark) {
      border-color: rgba(255, 255, 255, 0.15);
    }
  }
  
  /* 页脚内容 */
  .footer-content {
    text-align: center;
    margin-bottom: 3rem;
    color: var(--text-50);
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  /* 版权信息 */
  .copyright {
    margin-bottom: 0.5rem;
  }
  
  /* 链接容器 */
  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }
  
  /* 链接分隔符 */
  .link-separator {
    margin: 0 0.25rem;
    color: var(--text-30);
  }
  
  /* 页脚链接样式 */
  .footer-link {
    color: var(--primary);
    font-weight: 500;
    transition: opacity 0.3s ease;
    
    &:hover {
      opacity: 0.8;
      text-decoration: underline;
    }
  }
  
  /* 技术支持文本 */
  .powered-by {
    margin-top: 0.5rem;
  }
  
  /* 响应式设计 */
  @media (max-width: 768px) {
    .divider {
      width: 90%;
      margin: 2rem auto;
    }
    
    .footer-content {
      font-size: 0.8125rem;
    }
  }
</style>

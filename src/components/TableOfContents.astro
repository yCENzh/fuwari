---
// 导入 Svelte 组件
import TableOfContentsSvelte from './TableOfContents.svelte';

// 定义 Props 接口
interface Props {
  headings: {
    depth: number;
    slug: string;
    text: string;
  }[];
}

// 获取从页面布局传递过来的 headings 数据
const { headings } = Astro.props;
---

<!-- 
  渲染 Svelte 组件，并通过 props 将 headings 数据传递给它。
  使用 client:load 指令，因为目录通常在页面加载时就应该可见并可交互。
  如果希望延迟加载，也可以用 client:idle。
-->
<TableOfContentsSvelte headings={headings} client:idle />